option_settings:
  # RDS Database configuration
  aws:rds:dbinstance:
    DBEngine: postgres
    DBEngineVersion: "16.1"
    DBInstanceClass: db.t3.micro
    DBAllocatedStorage: 20
    DBUser: parseuser
    MultiAZDatabase: false
  
  # Database environment variable (will be auto-populated by RDS)
  aws:elasticbeanstalk:application:environment:
    # The DATABASE_URI will be constructed from RDS environment variables
    # RDS provides these automatically: RDS_HOSTNAME, RDS_PORT, RDS_DB_NAME, RDS_USERNAME, RDS_PASSWORD
    # We'll construct the full URI in the container startup
    POSTGRES_USER: parseuser
    POSTGRES_DB: parse_db
